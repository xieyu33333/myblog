
<div class='container'>
<table class="table table-bordered">
  <tr>
  	<th width="5%">类别</th>
    <th width="20%">标题</th>
    <th width="10%">作者</th>
    <th width="30%">内容摘要</th>
    <th width="10%">用户</th>
    <th width="10%">日期</th>
    <th width="5%"></th>
    <th width="5%"></th>
    <th width="5%"></th>
  </tr>

<% @firstpages.each do |firstpage| %>
  <tr>
  	<td><%= firstpage.pid %></td>
    <td><%= firstpage.title %></td>
    <td><%= firstpage.author %></td>
    <td><%= firstpage.content %></td>
    <td><%= firstpage.user %></td>
    <td><%= firstpage.date %></td>
    <td><%= link_to '显示', firstpage %></td>
    <td><%= link_to '编辑', edit_firstpage_path(firstpage) %></td>
    <td><%= link_to '删除', firstpage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to '新建', new_firstpage_path %>
</div>
